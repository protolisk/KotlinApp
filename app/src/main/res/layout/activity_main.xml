<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a string of lowercase letters" />

    <Button
        android:id="@+id/convertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result will be shown here."
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/permaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is my solution to a Reddit dailyprogrammer post: The task was to convert each letter of the alphabet into a predefined number: a=1, b=2, c=3, and so on. After converting each character of the string to numbers, the app adds the values together and shows the result to the user. "
        android:layout_marginTop="16dp"/>

</LinearLayout>